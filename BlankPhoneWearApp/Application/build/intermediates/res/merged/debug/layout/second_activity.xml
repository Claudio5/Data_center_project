<?xml version="1.0" encoding="utf-8"?>

<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.esl.blankphonewearapp.MainActivity" >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="60dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_fltbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="700dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <TextView
        android:id="@+id/hotline2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="700dp"
        android:textSize="25dp"
        android:text="Call Hotline" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/TableRow"
        style="@style/APDefacto.Dark"
        androidplot.renderMode="use_background_thread"
        android:layout_width="400dp"
        android:layout_height="420dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="0dp"
        app:graphHeight="30dp"
        app:graphHeightMode="fill"
        app:graphWidth="0dp"
        app:graphWidthMode="fill"
        app:legendAnchor="right_bottom"
        app:legendHeight="50dp"
        app:legendTextSize="15sp"
        app:lineLabels="left|bottom"
        app:title="Power" />

    <RelativeLayout
        android:id="@+id/power_lay"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TableRow"
        android:background="@drawable/background1">

        <TextView
            android:id="@+id/pwrAvgNmbview"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="67dp"
            android:layout_toRightOf="@+id/pwrAvgview"
            android:gravity="center"
            android:text="Power"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="45sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pwrAvgview"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="67dp"
            android:text="Average power"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="45sp" />
    </RelativeLayout>

</android.widget.RelativeLayout>