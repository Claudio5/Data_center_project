    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:elevation="0dp"
        app:fabSize="normal"
        android:layout_alignLeft="@id/my_recycler_view"
        android:layout_marginLeft="631dp"
        android:layout_marginTop="450dp"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_below="@+id/send_fltbtn" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/send_fltbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titleview"
        android:layout_marginRight="30dp"
        app:fabSize="normal"
        android:layout_marginTop="280dp"
        android:backgroundTint="@android:color/holo_purple"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_fltbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_call"
        android:layout_alignTop="@+id/hotline"
        android:layout_alignStart="@+id/save_nb" />

    <TextView
        android:id="@+id/hotline"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:text="Call Hotline"
        android:layout_above="@+id/save_nb"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <EditText
        android:id="@+id/hotline_nb"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginEnd="200dp"
        android:layout_marginTop="850dp"
        android:text="Phone Number"
        android:textSize="15sp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_nb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="mini"
        android:layout_alignTop="@+id/hotline_nb"
        android:layout_alignEnd="@+id/hotline_nb"
        android:layout_marginEnd="-50dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@android:color/holo_blue_light"
        app:srcCompat="@android:drawable/ic_menu_save" />


